@model Demo_Project_MVC.Models.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}
<style>
    body {
        background-color: black;
        color: white;
    }

    .container {
        margin-top: 20px;
    }

    .form-container {
        background-color: black;
        padding: 20px;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        border-radius: 10px;
    }

    .form-group label {
        color: white;
    }

    .form-group input, .form-group textarea {
        background-color: black;
        color: white;
        border: 1px solid grey;
    }

    .btn-primary {
        background-color: grey;
        color: white;
    }

    a {
        color: grey;
    }
</style>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-4">
                <h1 class="mb-3">User Registration</h1>
                <div class="form-container">
                    <form method="post" asp-controller="account" asp-action="register">
                        <div asp-validation-summary="All" class="text-success">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-success"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-success"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-success"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Mobile"></label>
                                <input asp-for="Mobile" class="form-control" />
                                <span asp-validation-for="Mobile" class="text-success"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-success"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-success"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address" class="control-label"></label>
                                <textarea asp-for="Address" class="form-control"></textarea>
                                <span asp-validation-for="Address" class="text-success"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                        <a href="/account/login">Already have an account?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
